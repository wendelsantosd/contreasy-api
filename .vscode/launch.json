  "version": "0.2.0",
  "configurations": [
    {
      "name": "Storizy - API Local",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/src/shared/infra/http/server.ts"
      ],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    },
  ]
}